{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ESNext",

        "forceConsistentCasingInFileNames": true,
        "allowUnreachableCode": true,
        "noErrorTruncation": true,

        "esModuleInterop": true,
        "isolatedModules": true,
        "resolveJsonModule": true,

        "strict": true,
        "noEmit": true,
        "rootDir": "./src",
        "outDir": "./dist/"
    },
    "include": ["./src"],
    "exclude": ["**/node_modules", "**/.*/"]
}
